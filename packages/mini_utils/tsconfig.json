{
  "compilerOptions": {
    /* Options */
    "target": "es2019",
    "module": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "rootDirs": ["src/"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
