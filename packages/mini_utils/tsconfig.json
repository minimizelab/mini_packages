{
  "compilerOptions": {
    /* Options */
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext"],
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "rootDirs": ["src/"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["src/main.ts"],
  "exclude": ["node_modules"]
}
